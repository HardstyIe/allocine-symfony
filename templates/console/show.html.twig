{% extends 'base.html.twig' %}

{% block title %}Console{% endblock %}

{% block body %}
    <h1>Console</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ console.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ console.name }}</td>
            </tr>
            <tr>
                <th>Picto</th>
                <td>{{ console.picto }}</td>
            </tr>
            <tr>
                <th>LaunchDate</th>
                <td>{{ console.launchDate ? console.launchDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ console.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_console_index') }}">back to list</a>

    <a href="{{ path('app_console_edit', {'id': console.id}) }}">edit</a>

    {{ include('console/_delete_form.html.twig') }}
{% endblock %}
