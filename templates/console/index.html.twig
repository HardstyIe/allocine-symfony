{% extends 'base.html.twig' %}

{% block title %}Console index{% endblock %}

{% block body %}
    <h1>Console index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Picto</th>
                <th>LaunchDate</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for console in consoles %}
            <tr>
                <td>{{ console.id }}</td>
                <td>{{ console.name }}</td>
                <td>{{ console.picto }}</td>
                <td>{{ console.launchDate ? console.launchDate|date('d/m/Y') : '' }}</td>
                <td>{{ console.price }}</td>
                <td>
                    <a href="{{ path('app_console_show', {'id': console.id}) }}">show</a>
                    <a href="{{ path('app_console_edit', {'id': console.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_console_new') }}">Create new</a>
{% endblock %}
