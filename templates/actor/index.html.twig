{% extends 'base.html.twig' %}

{% block title %}Acteurs{% endblock %}

{% block body %}
  {% if app.user %}
    
    <h1>Liste des Acteurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.firstName }}</td>
                <td>{{ actor.lastName }}</td>
                <td>
                    <a href="{{ path('app_actor_show', {'id': actor.id}) }}">Voir</a>
                    <a href="{{ path('app_actor_edit', {'id': actor.id}) }}">Modifiez</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'Acteurs trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_actor_new') }}">Enregistez un nouvelle Acteur</a>
  {% else %}
    <div class="text-center">
      <a href="{{ path('app_login') }}">Connectez-vous</a> ou <a href="{{ path('app_register') }}">Inscrivez-vous</a>
      </div>
    {% endif %}
{% endblock %}
